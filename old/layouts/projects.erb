<%= render 'header' %>
<div class="colmask fullpage">
	<div class="col1_onecol">
		<h2><%= @item[:title] %></h2>
		<% if @item[:links] %>
			<div class="summary_footer">
				<ul><% @item[:links].each do |j,k| %>
					<li><a href="<%= k %>"><%= j %></a></li>
				<% end %></ul>
			</div>
		<% end %>
		<p><%= @item[:summary] %></p>
		<%= yield %>
		<%= render 'comments' %>
	</div>
</div>
<%= render 'footer' %>
